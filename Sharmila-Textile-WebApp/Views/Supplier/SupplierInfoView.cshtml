<div class="content" id="printableArea">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card card-chart">
                    <div class="card-header card-header-success p-1 pt-2 pl-2">
                        <h5 class="card-title">Supplier Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-lg-3 col-md-4 col-sm-6 form-inline">
                                        <h5 class="font-weight-bold mr-3">Supplier Name : </h5>
                                        <h5>@Model.SupplierName</h5>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 form-inline">
                                        <h5 class="font-weight-bold mr-3">Address : </h5>
                                        <h5>@Model.Address</h5>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 form-inline">
                                        <h5 class="font-weight-bold mr-3">Landline : </h5>
                                        <h5>@Model.Landline</h5>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 form-inline">
                                        <h5 class="font-weight-bold mr-3">Mobile : </h5>
                                        <h5>@Model.Mobile</h5>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 form-inline">
                                        <h5 class="font-weight-bold mr-3">Opening Balance : </h5>
                                        <h5>@Model.OpeningBalance</h5>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 form-inline">
                                        <h5 class="font-weight-bold mr-3">Created Date : </h5>
                                        <h5>@Model.CreatedDate.ToString("yyyy-MM-dd")</h5>
                                    </div>
                                    <div class="col-lg-3 col-md-4 col-sm-6 form-inline">
                                        <h5 class="font-weight-bold mr-3">Created By : </h5>
                                        <h5>@Model.UserName</h5>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <hr />
                                    </div>
                                </div>
                                <div class="row justify-content-between">
                                    <div class="col-auto mt-auto">
                                        <button id="btnPrint" class="btn btn-primary d-print-none btn-success"><i class="material-icons mr-2">print</i>Print</button>
                                    </div>
                                    <div class="col-auto text-danger form-inline">
                                        <h3 class="font-weight-bold mr-3">Current Balance : </h3>
                                        <h3>@Model.CurrentBalance</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-chart">
                    <div class="card-header card-header-info p-1 pt-2 pl-2">
                        <h5 class="card-title">Supplier Accounts</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Account Type</th>
                                    <th class="text-right">Total Amount</th>
                                    <th class="text-center d-print-none">View</th>
                                </tr>
                            </thead>
                            <tbody id="tblAccount">
                            </tbody>
                        </table>
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                <button class="btn btn-success pt-2 pb-2 d-print-none" id="btnLoadMoreAcc">
                                    <h5 style="height: 25px;" class="mb-0 pb-0 font-weight-bold">Load More</h5>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-chart">
                    <div class="card-header card-header-info p-1 pt-2 pl-2">
                        <h5 class="card-title">Supplier Payment</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Payment Type</th>
                                    <th class="text-right">Total Amount</th>
                                    <th class="text-center d-print-none">View</th>
                                </tr>
                            </thead>
                            <tbody id="tblPayment">
                            </tbody>
                        </table>
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                <button class="btn btn-success pt-2 pb-2 d-print-none" id="btnLoadMorePay">
                                    <h5 style="height: 25px;" class="mb-0 pb-0 font-weight-bold">Load More</h5>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#btnPrint').click(function(){
        printDiv();
    });

    function printDiv() {
        var restorepage = $('body').html();
        var printcontent = $('#printableArea').clone();
        $('body').empty().html(printcontent);
        window.print();
        $('body').html(restorepage);
    }

    jQuery(document).bind("keyup keydown", function(e) {
        if (e.ctrlKey && e.keyCode === 80) {
            printDiv();
            return false;
        }
        return false;
    });

    var skipAcc = 0;
    var skipPay = 0;

    GetAccountList();
    GetPayment();

    $('#btnLoadMoreAcc').click(function() {
        $("#btnLoadMoreAcc").html(`<img src="/img/loading-v2.gif" style="max-height: 25px;" />`);
        GetAccountList();
    });

    $('#btnLoadMoreCol').click(function() {
        $("#btnLoadMoreCol").html(`<img src="/img/loading-v2.gif" style="max-height: 25px;" />`);
        GetPayment();
    });

    function GetAccountList() {

        $.ajax({
            url: localStorage.apiLink + "api/SupplierAccount/GetList/@Model.SupplierId/"+skipAcc,
            type: 'GET',
            contentType: 'application/json',
            success: function (data, textStatus, xhr) {
                var html = "";
                $("#btnLoadMoreAcc").html(`<h5 style="height: 25px;" class="mb-0 pb-0 font-weight-bold">Load More</h5>`);

                data.forEach(function (currentValue, index, arr) {
                    html += populateTable(currentValue.Date, currentValue.AccountType, currentValue.Amount, "/SupplierAccount/SupplierAccountListView");
                    skipAcc++;
                });
                $('#tblAccount').append(html);
            },
            error: function (xhr, textStatus, errorThrown) {
                $("#btnLoadMoreAcc").html(`<h5 style="height: 25px;" class="mb-0 pb-0 font-weight-bold">Load More</h5>`);
            }
        });
    }

    function GetPayment() {

        $.ajax({
            url: localStorage.apiLink + "api/SupplierPayment/GetList/@Model.SupplierId/"+skipPay,
            type: 'GET',
            contentType: 'application/json',
            success: function (data, textStatus, xhr) {
                var html = "";
                $("#btnLoadMorePay").html(`<h5 style="height: 25px;" class="mb-0 pb-0 font-weight-bold">Load More</h5>`);

                data.forEach(function (currentValue, index, arr) {
                    html += populateTable(currentValue.Date, currentValue.PaymentTypeName, currentValue.TotalAmount,  "/SupplierPayment/PaymentListView");
                    skipPay++;
                });
                $('#tblPayment').append(html);
            },
            error: function (xhr, textStatus, errorThrown) {
                $("#btnLoadMorePay").html(`<h5 style="height: 25px;" class="mb-0 pb-0 font-weight-bold">Load More</h5>`);
            }
        });
    }

    function populateTable(date, type, amount, actionLink) {
      return `<tr>
                <td>${moment(date).format('YYYY-MM-DD')}</td>
                <td>${type}</td>
                <td class="text-right">${amount}</td>
                    <td class="text-center d-print-none"><a class="btn btn-sm btn-primary text-white" target="_blank" href="`+actionLink+`?date=${moment(date).format('YYYY-MM-DD')}"><i class="fa fa-eye"></i><a></td>
            </tr>`;
    }

</script>

