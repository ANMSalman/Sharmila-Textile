<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <hr />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <a class="btn btn-primary float-right" asp-controller="Expense" asp-action="ExpenseDetailView" asp-route-breadcumValue="Create New Expense">
                    <i class="material-icons">add</i> Create New Expense
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card mt-0">
                    <div class="card-body">
                        <table id="dataTbl" class="table table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th>Description</th>
                                    <th>Cash</th>
                                    <th>Cheque</th> 
                                    <th>Total Amount</th>
                                    <th>Created Date</th>
                                    <th>Payment Type</th> 
                                    <th>Created By</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td class="text-center">@item.ExpenseId</td>
                                        <td>@item.Description</td>
                                        <td>@item.Cash</td>
                                        <td>@item.Cheque</td> 
                                        <td>@item.TotalAmount</td>
                                        <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>
                                        <td>@item.PaymentType</td> 
                                        <td>@item.UserName</td>
                                        <td class="td-actions text-center">
                                            <a type="button" rel="tooltip" class="btn btn-success" asp-controller="Expense" asp-action="ExpenseDetailView" asp-route-breadcumValue="Edit Expense" asp-route-expId="@item.ExpenseId">
                                                <i class="material-icons">visibility</i>
                                            </a>
                                        </td>
                                    </tr>
                                } 
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        var myTable = $('#dataTbl').DataTable();
        $('#dataTbl_filter').addClass("float-right");
    });
</script>
